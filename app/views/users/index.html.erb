<% provide( :title, "Users" ) %>

<%= render :partial => "layouts/flash_messages" %>

<div class="table">
  <div class="thead">
    <div class="tr">
        <div class="th small">Name</div>
        <div class="th small">Role</div>
        <div class="th small">Email</div>
    </div>
  </div>
  
  <div class="tbody">
      <% @users.each do |user| %>
          <a class="tr" href="<%= user_path( :id => user.id ) %>">
              <div class="td"><%= user.name %></div>
              <div class="td"><%= user.role %></div>
              <div class="td"><%= user.email %></div>
          </a>
      <% end %>
  </div>

  <div class="tfoot">
      <div class="th"></div>
      <div class="th"></div>
      <div class="th"></div>
  </div>
</div>
